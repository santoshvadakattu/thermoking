<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Link Stack Properties"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <title
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="Provide the title"
                        fieldLabel="Title"
                        name="./titlee"/>
                    <descrtiption
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Description"
                        name="./descriptionn"/>
                    <file
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                        autoStart="{Boolean}false"
                        class="cq-droptarget"
                        fileNameParameter="./fileName"
                        fileReferenceParameter="./img"
                        mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                        multiple="{Boolean}false"
                        name="./fileRefferencee"
                        title="Upload Image Asset"
                        uploadUrl="${suffix.path}"
                        useHTML5="{Boolean}true"/>
                    <button.1
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="/apps/core/wcm/components/button/v2/button"
                        fieldLabel="Button"
                        name="./button1"/>
                    <linkURL.1
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                        fieldDescription="Provide the page path"
                        fieldLabel="Link Url"
                        name="./linkurl"
                        required="{Boolean}true"
                        rootPath="/content"/>
                    <button.2
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="/apps/core/wcm/components/button/v2/button"
                        fieldLabel="Button"
                        name="./button2"/>
                    <linkURL.2
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                        fieldDescription="Provide the page path"
                        fieldLabel="Link Url"
                        name="./linkurl"
                        required="{Boolean}true"
                        rootPath="/content"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
